<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/donation_success_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="@dimen/padding_double"
		android:text="@string/donation_success_message"
		android:textColor="@color/mainTextColor"
		android:textSize="@dimen/success_title_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<ImageView
		android:id="@+id/donation_success_check_mark"
		android:layout_width="@dimen/tick_mark_size"
		android:layout_height="@dimen/tick_mark_size"
		android:layout_marginTop="@dimen/padding"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/donation_success_title"
		app:srcCompat="@drawable/animated_check"/>

	<Button
		android:id="@+id/donation_success_dismiss_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/padding_double"
		android:background="@drawable/donate_button_bg"
		android:text="@string/donation_dismiss_button"
		android:textColor="@android:color/white"
		android:textSize="@dimen/button_text_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>