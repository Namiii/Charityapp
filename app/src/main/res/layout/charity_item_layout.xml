<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/padding"
	android:background="@color/itemBackground"
	android:padding="@dimen/padding"
	>

	<ImageView
		android:id="@+id/charity_item_logo"
		android:layout_width="@dimen/user_image_size"
		android:layout_height="@dimen/user_image_size"
		android:background="@drawable/logo_image_border"
		android:padding="2dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@tools:sample/avatars"/>

	<TextView
		android:id="@+id/charity_item_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/padding_double"
		android:textColor="@color/mainTextColor"
		android:textSize="@dimen/title_text_size"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/charity_item_logo"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="@tools:sample/first_names"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_chevron_right_black_24dp"
		android:tint="@color/colorPrimary"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>